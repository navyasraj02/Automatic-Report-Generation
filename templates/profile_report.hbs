        <div class="profile-section">
          <h3 class="section-title">Conference Participation</h3>
          <table class="simple-table">
            <tbody>
              <tr>
                <td>Presentations</td>
                <td>
                  <div class="data-list">
                    {{#each researchProfile.presentations}}
                      <span class="data-item">{{this.percentage}}%
                        {{this.label}}</span>
                    {{/each}}
                  </div>
                </td>
              </tr>
              <tr>
                <td>Poster Sessions</td>
                <td>
                  <div class="data-list">
                    {{#each researchProfile.posters}}
                      <span class="data-item">{{this.percentage}}%
